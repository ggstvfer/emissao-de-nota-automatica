        "url": {
          "raw": "{{baseUrl}}/nfse/emitir",
          "host": ["{{baseUrl}}"],
          "path": ["nfse","emitir"]
        }
      }
    },
    {
      "name": "Listar NFSe",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{jwt}}"}
        ],
        "url": {
          "raw": "{{baseUrl}}/nfse?page=1&pageSize=10&status=SUCCESS",
          "host": ["{{baseUrl}}"],
          "path": ["nfse"],
          "query": [
            {"key": "page", "value": "1"},
            {"key": "pageSize", "value": "10"},
            {"key": "status", "value": "SUCCESS"}
          ]
        }
      }
    },
    {
      "name": "Obter XML",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{jwt}}"}
        ],
        "url": {
          "raw": "{{baseUrl}}/nfse/{{id}}/xml",
          "host": ["{{baseUrl}}"],
          "path": ["nfse","{{id}}","xml"]
        }
      }
    },
    {
      "name": "Obter PDF",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{jwt}}"}
        ],
        "url": {
          "raw": "{{baseUrl}}/nfse/{{id}}/pdf",
          "host": ["{{baseUrl}}"],
          "path": ["nfse","{{id}}","pdf"]
        }
      }
    },

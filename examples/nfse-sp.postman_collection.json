          "mode": "raw",
          "raw": "{\n  \"rpsNumber\": \"1\",\n  \"rpsSeries\": \"A\",\n  \"issueDate\": \"2025-09-16T10:00:00.000Z\",\n  \"serviceCode\": \"101\",\n  \"serviceDescription\": \"Serviço de informática\",\n  \"serviceAmount\": 150.5,\n  \"taxRate\": 0.02,\n  \"issRetained\": false,\n  \"provider\": { \"cnpj\": \"12345678000199\" },\n  \"customer\": { \"cnpj\": \"99887766000155\", \"name\": \"Cliente Exemplo\" }\n}"

        "url": {
          "raw": "{{baseUrl}}/ready",
          "host": ["{{baseUrl}}"],
          "path": ["ready"]
        }
      }
    },
    {
      "name": "Metrics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/metrics",
          "host": ["{{baseUrl}}"],
          "path": ["metrics"]
        }
      }
    },
    {
      "name": "Emitir NFSe",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Authorization", "value": "Bearer {{jwt}}"},
          {"key": "Content-Type", "value": "application/json"},
          {"key": "idempotency-key", "value": "idem-{{idem}}"}

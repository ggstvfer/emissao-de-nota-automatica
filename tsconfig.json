{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  "outDir": "dist-test",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "isolatedModules": true,
    "baseUrl": "."
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}

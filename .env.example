# Environment variables example
NODE_ENV=development
PORT=3000

# JWT
JWT_SECRET=change_this_development_secret_please

# Database (Prisma)
DATABASE_URL=postgresql://nfse:nfse@localhost:5432/nfse?schema=public

# External agent (if applicable)
# Optional external agent (mock/homolog)
AGENT_BASE_URL=https://agente-homolog.fake

# A1 certificate (optional in dev/test)
CERT_PFX_PATH=/certs/cert.pfx
CERT_PFX_PASSWORD=change_me

# Logging
LOG_LEVEL=info
LOG_PRETTY=1

# Metrics
# Enable/disable metrics endpoint and hooks (1 = enabled, 0 = disabled)
METRICS_ENABLED=1

# Readiness thresholds (optional)
# Event loop lag tolerated (ms)
HEALTH_MAX_EVENT_LOOP_LAG_MS=200
# Max heap used (bytes)
HEALTH_MAX_HEAP_USED_BYTES=1073741824
# Max RSS (bytes)
HEALTH_MAX_RSS_BYTES=2147483648
# DB ping timeout (ms)
HEALTH_DB_TIMEOUT_MS=1500

# XML signing compatibility (only if needed)
SIGN_LEGACY_SHA1=0

# CORS allowed origins (CSV). Examples:
# ALLOWED_ORIGINS=http://localhost:5173,https://app.example.com,*.corp.example
ALLOWED_ORIGINS=
